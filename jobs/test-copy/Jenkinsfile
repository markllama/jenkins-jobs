
node('container') {
    stage("Copy A File") {

        step(
            [
                $class: 'FileOperationsBuilder',
                fileOperations: [
                    [
                        $class: 'FileCopyOperation',
                        includes: '/var/lib/jenkins/.ssh/kerberos.keytab',
                        excludes: '',
                        flattenFiles: false,
                        targetLocation: '.'
                    ]
                ]
            ]
        )

        copy(
            srcFile: "kerberos.keytab",
            dstFile: "kerberos.keytab"
        )
    }
}
